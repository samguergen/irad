<div class="container">
  <%= form_for @album, url: {action: "create"}, html: {multipart: true, class: "form-horizontal"} do |f| %>
    <%= render 'shared/error_messages', target: @album %>
    <div class="form-group">
      <%= f.label :title, class: "col-sm-2 control-label" %>
      <div class = "col-sm-3">
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'year released', class: "col-sm-2 control-label" %>
      <div class="col-sm-3">
        <%= f.text_field :release_year, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label 'description', class: "col-sm-2 control-label" %>
      <div class = "col-sm-6">
        <%= f.text_area :description, class: "form-control" %>
      </div>
    </div>
    <div class = "form-group">
      <%= f.label 'upload photo', class: "col-sm-2 control-label" %>
      <div class = "col-sm-3">
        <%= f.file_field :avatar, class: "form-control" %>
      </div>
    </div>
    <div class="form-group">
      <div class = "col-sm-offset-2 col-sm-8">
        <%= f.submit %>
      </div>
    </div>
  <% end %>
</div>