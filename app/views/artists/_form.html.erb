<div>
  <%= form_for @artist, html: { multipart: true } do |f| %>
    <%= render 'shared/error_messages', target: @artist %>
    <%= f.label 'stage name'%>:
    <%= f.text_field :stage_name%><br/>
    <%= f.label 'birth name (if different)'%>:
    <%= f.text_field :birth_name%><br/>
    <%= f.label 'date of birth'%>:
    <%= f.date_select :date_of_birth, start_year: 1900, end_year: Time.now.year %><br/>
    <%= f.label 'description'%>:
    <%= f.text_field :description %><br/>
    <%= f.file_field :avatar %>
    <%= f.submit %>
  <% end %>
</div>